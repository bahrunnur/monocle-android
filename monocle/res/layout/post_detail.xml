<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/post_preview_image"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:contentDescription="@string/preview" />
        
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="14dp"
	    android:paddingRight="14dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:minHeight="48dp"
	    android:orientation="vertical" >
		
	    <TextView
	        android:id="@+id/post_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#838c98"
	        android:textSize="18sp"
	        android:textStyle="bold" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingTop="5dp" >
	        
	        <TextView
		        android:id="@+id/post_votes"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minWidth="20dp"
		        android:textColor="#77808c"
		        android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/post_domain"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:textColor="#77808c"
	            android:textSize="12sp" />
	        
	        <TextView
	            android:id="@+id/post_stale_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:textColor="#77808c"
	            android:textSize="12sp" />
	        
	        <TextView
	            android:id="@+id/post_user_handle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:textColor="#77808c"
	            android:textSize="12sp" />
	        
	    </LinearLayout>
	</LinearLayout>
	
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#77808c"
        android:text="@string/summary" />
    
    <TextView
        android:id="@+id/post_summary"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#4b525b" />
    
    <Button
        android:id="@+id/post_read_more"
        android:layout_margin="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read_more" />
    
</LinearLayout>
</ScrollView>
